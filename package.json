  "license": "MIT",
  "private": true,
  "husky": {
    "hooks": {
      "pre-commit": "yarn format && yarn validate && yarn test && yarn lint"
    }
  },
  "scripts": {
    "start": "yarn watch",
    "build": "node ./tasks/build.js",
    "build-schemas": "node ./tasks/build-schemas.js",
    "update-assets": "node ./tasks/update-assets.js",
    "watch": "yarn update-assets && node ./tasks/watch.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "node ./tasks/lint-contents.js",
    "fix": "node ./tasks/fix-contents && yarn format",
    "lint-js": "eslint './**/*.js'",
    "format": "node ./tasks/build-schemas.js && node ./tasks/format-docs.js",
    "validate": "node ./tasks/validate-jsons.js",
    "deploy": "NODE_DEBUG=gh-pages node ./tasks/deploy.js"
  },
  "devDependencies": {
    "ajv": "^6.9.1",
    "basic-ftp": "^3.3.1",
    "chokidar": "^2.1.2",
    "consola": "^2.4.1",
    "dotenv-safe": "^6.1.0",
    "eslint": "^5.14.1",
    "eslint-config-prettier": "^4.0.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jest": "^22.3.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "fs-extra": "^7.0.1",
    "gh-pages": "^2.0.1",
    "glob": "^7.1.3",
    "hasha": "^3.0.0",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "lodash.clonedeep": "^4.5.0",
    "lodash.isplainobject": "^4.0.6",
    "luxon": "^1.11.3",
    "node-fetch": "^2.3.0",
    "pluralize": "^7.0.0",
    "prettier": "^1.16.4",
    "prettier-eslint": "^8.8.2",
    "rimraf": "^2.6.3",
    "tar-pack": "^3.4.1",
    "textlint": "^11.2.3",
    "textlint-rule-first-sentence-length": "^1.0.1",
    "textlint-rule-ja-hiragana-fukushi": "^1.0.3",
    "textlint-rule-ja-hiragana-keishikimeishi": "^1.0.2",
    "textlint-rule-ja-nakaguro-or-halfwidth-space-between-katakana": "^2.0.1",
    "textlint-rule-ja-no-mixed-period": "^2.1.1",
    "textlint-rule-ja-no-redundant-expression": "^2.0.0",
    "textlint-rule-ja-space-between-half-and-full-width": "^2.0.1",
    "textlint-rule-max-kanji-continuous-len": "^1.1.1",
    "textlint-rule-max-length-of-title": "^1.0.1",
    "textlint-rule-max-ten": "^2.0.3",
    "textlint-rule-no-doubled-conjunction": "^1.0.2",
    "textlint-rule-no-doubled-conjunctive-particle-ga": "^1.0.2",
    "textlint-rule-no-doubled-joshi": "^3.5.1",
    "textlint-rule-no-dropping-the-ra": "^1.1.2",
    "textlint-rule-no-hankaku-kana": "^1.0.2",
    "textlint-rule-no-mixed-zenkaku-and-hankaku-alphabet": "^1.0.1",
    "textlint-rule-sentence-length": "^2.1.1"
  }
