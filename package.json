  "license": "MIT",
  "private": true,
  "husky": {
    "hooks": {
      "pre-commit": "yarn format && yarn validate && yarn test && yarn lint"
    }
  },
  "scripts": {
    "start": "yarn watch",
    "build": "node ./tasks/build.js",
    "build-schemas": "node ./tasks/build-schemas.js",
    "watch": "node ./tasks/watch.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint ./**/*.js",
    "format": " prettier --write '{README.md,{docs,src,tasks}/**/*.{json,js,md}}' && node ./tasks/format-docs.js",
    "validate": "node ./tasks/validate-jsons.js",
    "deploy": "NODE_DEBUG=gh-pages node ./tasks/deploy.js"
  },
  "devDependencies": {
    "ajv": "^6.7.0",
    "chokidar": "^2.0.4",
    "consola": "^2.3.2",
    "eslint": "^5.12.1",
    "eslint-config-prettier": "^3.6.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^22.1.3",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "fs-extra": "^7.0.1",
    "gh-pages": "^2.0.1",
    "glob": "^7.1.3",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "lodash.clonedeep": "^4.5.0",
    "luxon": "^1.10.0",
    "node-fetch": "^2.3.0",
    "pluralize": "^7.0.0",
    "prettier": "^1.15.3",
    "prettier-eslint": "^8.8.2",
    "rimraf": "^2.6.3",
    "tar-pack": "^3.4.1"
  }
}
